                android:background="@color/border_gray"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_homework_date"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:paddingLeft="40px">

                <ImageView
                    android:id="@+id/iv_date_xing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_xing"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/iv_date_xing"
                    android:text="@string/home_date"
                    android:textColor="@color/deep_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/et_homework_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:textColor="@color/deep_gray"
                    android:layout_toRightOf="@+id/tv_date"
                    android:background="@null"
                    android:hint="@string/home_date_hint"
                    android:singleLine="true"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:src="@drawable/arrow_grey" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_gray"></View>

