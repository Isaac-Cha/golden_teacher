            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_gray"></View>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="40px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="40px">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25px"
                        android:src="@drawable/icon_xing" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@id/iv"
                        android:text="@string/content"
                        android:textColor="@color/deep_gray"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_homework_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:textColor="@color/deep_gray"
                        android:background="@null"
                        android:gravity="left|top"
                        android:hint="@string/content_hint"/>

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_below="@id/all"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="220px">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_add"></ImageView>

                    <ImageView
                        android:id="@+id/iv_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/circle_remove"
                        android:visibility="gone" />

                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

