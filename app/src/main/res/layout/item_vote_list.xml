<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_vote" />

        <ImageView
            android:id="@+id/iv_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_msg_round"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20px"
        android:layout_toRightOf="@id/rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五月的第二周课程表已上传成功！"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_vote_time_end" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="2015-10-31 12:40:22"
                android:textColor="@color/color_vote_time_text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="进行中"
                android:textColor="@color/color_vote_time_text_gray"
                android:textSize="12sp" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:src="@drawable/dustbin" />

    <ImageView
        android:id="@+id/iv_no_public"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/img_vote_no_public"
        android:visibility="gone" />

</com.zhy.autolayout.AutoRelativeLayout>