<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180px"
    android:layout_height="180px"
    android:layout_margin="10px">

    <ImageView
        android:id="@+id/iv_item_grid_image"
        android:layout_width="176px"
        android:layout_height="176px"
        android:layout_margin="2px"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_btn_add_pic"></ImageView>

    <ImageView
        android:id="@+id/iv_item_grid_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2px"
        android:src="@drawable/circle_remove"
        android:visibility="gone" />

</com.zhy.autolayout.AutoRelativeLayout>